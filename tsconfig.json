{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,  // Skip checking libraries for speed
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,  // Ensure compatibility with CommonJS modules
    "module": "esnext",
    "moduleResolution": "node",  // Node module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",  // Ensure JSX support for React 17+
    
    
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
